<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    tools:context=".MakeReport">

    <Button
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/ui_blue"
        android:text="Back"
        android:onClick="back"
        android:textColor="#FFFFFF"
        app:cornerRadius="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/next"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="118dp"
        android:backgroundTint="@color/ui_blue"
        android:lineSpacingExtra="0sp"
        android:onClick="next"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:cornerRadius="2dp"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Report Disaster"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If disaster is severe, contact 911 before reporting!"
        android:textColor="#FF0000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="90dp"
        android:text="What kind of disaster did you encounter?"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="325dp"
        android:text="Provide more detail if other:"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="410dp"
        android:text="Attach photos of the disaster:"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/backing1"
        android:layout_width="348dp"
        android:layout_height="200dp"
        android:layout_marginTop="115dp"
        android:background="@drawable/roundedcorners"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:gravity="top|start"
        android:inputType="none"

        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:scrollbars="vertical"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Deprecated" />

    <EditText
        android:id="@+id/otherType"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/roundedcorners"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:gravity="top|start"
        android:inputType="textMultiLine"

        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:scrollbars="vertical"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Deprecated" />

    <RadioGroup
        android:layout_width="348dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/backing1"
        app:layout_constraintEnd_toEndOf="@+id/backing1"
        app:layout_constraintStart_toStartOf="@+id/backing1"
        app:layout_constraintTop_toTopOf="@+id/backing1">

        <RadioButton
            android:id="@+id/fire"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:buttonTint="#FF0000"
            android:text="Fire" />

        <RadioButton
            android:id="@+id/flood"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:buttonTint="#FF0000"
            android:text="Flooding" />

        <RadioButton
            android:id="@+id/earthquake"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:buttonTint="#FF0000"
            android:text="Earthquake" />

        <RadioButton
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:buttonTint="#FF0000"
            android:text="Other (ex. hurricane, blizzard)" />
    </RadioGroup>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="435dp"
        android:backgroundTint="@color/bg_grey"
        android:onClick="upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_upload" />

    <ImageButton
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="help"
        android:src="@android:drawable/ic_menu_help"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

</androidx.constraintlayout.widget.ConstraintLayout>